<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="ApparelMakeableBase">
    <defName>Stonetear_TabardDress</defName>
    <label>Tabard Dress</label>
    <description>A confortable yet dazzling dress typically worn by women.</description>
    <graphicData>
      <texPath>Core/Things/Pawn/Humanlike/Apparel/TabardDress/Dress</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Industrial</techLevel>
    <costStuffCount>70</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <tradeability>Sellable</tradeability>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>1500</WorkToMake>
      <Mass>0.5</Mass>
      <StuffEffectMultiplierArmor>0.25</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>1</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>1</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
		    <li>Neck</li>
		    <li>Shoulders</li>
        <li>Torso</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Core/Things/Pawn/Humanlike/Apparel/TabardDress/Pants</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <!--
      <tags>
        <li>IndustrialBasic</li>
		    <li>IndustrialAdvanced</li>
      </tags>
      	-->
	  <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
	 <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.93, 0.15, 0.10)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.68, 0.85, 0.90)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.96, 0.88, 0.64)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
  
